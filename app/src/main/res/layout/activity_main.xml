<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="250px"
            android:layout_height="130px"
            android:src="@drawable/rectangle1" />

        <ImageView
            android:layout_width="80px"
            android:layout_height="130px"
            android:src="@drawable/rectangle2" />

        <ImageView
            android:layout_width="80px"
            android:layout_height="130px"
            android:src="@drawable/rectangle1" />
        <ImageView
            android:layout_width="80px"
            android:layout_height="130px"
            android:src="@drawable/rectangle2" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160px"
                android:layout_height="80px"
                android:src="@drawable/rectangle3" />

            <ImageView
                android:layout_width="160px"
                android:layout_height="50px"
                android:src="@drawable/rectangle4" />

        </LinearLayout>


</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="250px"
            android:layout_height="100px"
            android:src="@drawable/rectangle5" />


        <ImageView
            android:layout_width="400px"
            android:layout_height="100px"
            android:src="@drawable/rectangle6" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="450px"
            android:layout_height="100px"
            android:src="@drawable/rectangle7" />


        <ImageView
            android:layout_width="200px"
            android:layout_height="100px"
            android:src="@drawable/rectangle8" />


    </LinearLayout>
</LinearLayout>